<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Home</title>
</head>
<body>

<nav>
    <ul><a href="/">Home</a></ul>
    <ul><a href="/about">About</a></ul>
    <ul><a href="/tasks">Tasks</a></ul>
</nav>

<form action="/tasks" method="post">
    <input type="hidden" name="csrf_token" value="{{ .CSRFToken }}">

    <div>
        <input type="text" name="task" value="{{ index .StringMap "task" }}" required>
        {{ with index .FormErrors "task" }}
            <p><strong>{{ . }}</strong></p>
        {{ end }}
    </div>

    <input type="submit" value="Add Task">
</form>


{{ with (index .StringMap "newTask") }}
    <p>Your task has been added: {{ . }}</p>
{{ end }}

<hr>

<h3>Tasks To Do</h3>
{{ $tasks := index .Data "tasks" }}

{{ with $tasks }}
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Task</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{ range $tasks }}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.Task}}</td>
                    <td>
                        <form action="/tasks/{{.ID}}/complete" method="post">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                            <input type="hidden" name="completed" value="true">

                            <input type="submit" value="Completed">
                        </form>
                    </td>
                    <td>
                        <form action="/tasks/{{.ID}}/delete" method="post">
                            <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">

                            <input type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            {{ end }}
        </tbody>
    </table>
{{ else }}
    <p>No tasks.</p>
{{ end }}


<hr>

<h3>Completed Tasks</h3>
{{ $finished := index .Data "completedTasks" }}

{{ with $finished }}
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Task</th>
            <th></th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {{ range $finished }}
            <tr>
                <td>{{.ID}}</td>
                <td>{{.Task}}</td>
                <td>
                    <form action="/tasks/{{.ID}}/complete" method="post">
                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">
                        <input type="hidden" name="completed" value="false">

                        <input type="submit" value="Not Completed">
                    </form>
                </td>
                <td>
                    <form action="/tasks/{{.ID}}/delete" method="post">
                        <input type="hidden" name="csrf_token" value="{{$.CSRFToken}}">

                        <input type="submit" value="Delete">
                    </form>
                </td>
            </tr>
        {{ end }}
        </tbody>
    </table>
{{ else }}
    <p>No completed tasks.</p>
{{ end }}

</body>
</html>